<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mon_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/image_profile"/>

    <TextView
        android:id="@+id/text_receiver"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/mon_profile"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/receiver_message_layout"
        android:text="bonjour les amis"/>
    <TextView
        android:id="@+id/text_sender"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/sender_message_layout"
        android:text="bonjour les amis"/>

</RelativeLayout>